/**index.wxss**/

.drawer_box { 
 width: 650rpx; 
 overflow: hidden; 
 position: fixed; 
 top: 50%; 
 left: 0; 
 z-index: 1001; 
 background: #FAFAFA; 
 margin: -150px 50rpx 0 50rpx; 
 border-radius: 3px; 
} 

.drawer_screen { 
 width: 100%; 
 height: 100%; 
 position: fixed; 
 top: 0; 
 left: 0; 
 z-index: 1000; 
 background: #000; 
 opacity: 0.5; 
 overflow: hidden; 
} 

.drawer_content { 
 height: 173px; 
 overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.input{
  margin-top:10px;
  height: 32px;
  border:1px solid #EEEEEE;
  margin-left:17px;
  margin-right:17px;
  font-size: 15px;
} 

.bottomBtn {
  width: 50%;
  height: 40px;
  border-top: 1px solid #EEEEEE;
  border-right: 1px solid #EEEEEE;
  text-align: center; 
  line-height: 40px;
  font-size: 15px;
}

.nextBtn {
  position:fixed; 
  text-align: center;
  margin:0 auto;
  left:10px;  
  right:10px;
  bottom:60px;
  font-size: 15px;
  color: white;
}