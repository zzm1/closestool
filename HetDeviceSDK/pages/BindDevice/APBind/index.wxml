<view class="drawer_screen" bindtap="cellClick" data-statu="close" wx:if="{{showModalStatus}}"></view> 
<view class="drawer_box" style="height:173px; background-color: white;" wx:if="{{showModalStatus}}">

	<view class="drawer_content"> 
    <view style='font-size: 15px; text-align: center; margin-top:10px;'>{{title}}</view>
    <input class='input' placeholder="请输入密码" bindinput="bindKeyInput"></input>
    <view style='display:flex; margin-top:58px;'>
          <view class='bottomBtn' bindtap='cancelClick'>取消</view>
          <view class='bottomBtn' bindtap='okClick' data-statu="close">确定</view>
    </view>
	</view>
	
</view>


