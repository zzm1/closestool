/* pages/ablity1/ablity1.wxss */

.ablity1 {
    display: flex;
    flex-direction: column;
    background: #F7F7F7;
    box-sizing: border-box;
}

.title {
    font-size: 32rpx;
    background: #fff;
    line-height: 88rpx;
    padding-left: 34rpx;
    border-bottom: 1px solid #e5e5e5;
}
.borderTop1{
    border-top: 1px solid #e5e5e5;
}
.tab-box{
    display: flex;
    background: #fff;
    font-size: 32rpx;
    border-bottom: 1px solid #e5e5e5;
    line-height: 120rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}
.tab-box view{
    flex:1;
    text-align: center;
    border-right: 1px solid #eeeeee;
}
.tab-box view.active{
    color: #3DA9F2;
}
.tab-box text:last-child{
    border-right: 0;
}

.item-box {
    height: 254rpx;
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: 28rpx;
    width: 250rpx;
    background: #fff;
    box-sizing: border-box;
    border-right: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
    color: #666;
    line-height: 1;
}
.item-box:nth-child(3n){
    border-right: 0;
}
.item-box view.active{
    color: #35A5F1;
}
.item-box view.active.stop{
    color: #F15A5A;
}

