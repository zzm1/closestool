<template name="mySlider">
    <view class='temp-list'>
        <view class='temp-name'>{{title}}</view>
        <view>
            <slider bindchange="slider4change" min="1" max="4" bindchange="sliderChange" data-index="{{index}}" data-name="{{name}}" selected-color="#178DFF"  />
        </view>
        <view class='slider-num'>
            <text class="{{value==1||!value?'active':''}}">1档</text>
            <text class="{{value==2?'active':''}}">2档</text>
            <text class="{{value==3?'active':''}}">3档</text>
            <text class="{{value==4?'active':''}}">4档</text>
        </view>
    </view>
</template>